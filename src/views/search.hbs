<section id="search">
  <h1>Search</h1>
  <form action="/movies/search" method="GET" class="form">
    <input type="text" class="search" name="search" value="{{filters.search}}" placeholder="Title..." />
    <input type="text" name="genre" value="{{filters.genre}}" class="genre" placeholder="Genre..." />
    <input type="number" name="year" value="{{filters.year}}" class="year" placeholder="Year..." />
    <input type="submit" value="search" />
  </form>
</section>

<section id="catalog">
  <div class="band">

    {{>movieList}}

  </div>
</section>